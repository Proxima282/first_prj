app = QApplication([])
mw = QWidget()
mw.resize(500,400)
mw.setWindowTitle('Memory card')
a = 1

def result():
    mess = QMessageBox()
    if rb_group.checkedButton() is buttons[0]:
        mess.setText('Правильно!')
    else:
        mess.setText('Неправильно!')
   
    def new_question():
        global buttons
        shuffle(buttons)
        buttons[0].setText('New 1')
        buttons[1].setText('New 2')
        buttons[2].setText('New 3')
        buttons[3].setText('New 4')

    mess.exec_()
    new_question()
    


print(a)
  
    
question = QLabel('В якому році канал отримав золоту кнопку на ютубі?')
rb_group = QButtonGroup()
rb1 = QRadioButton('2015')
rb2 = QRadioButton('2003')
rb3 = QRadioButton('2001')
rb4 = QRadioButton('2006')

main_Layout = QVBoxLayout()
H1_layout = QHBoxLayout()
H2_layout = QHBoxLayout()

H2_layout.addWidget(rb1,alignment=Qt.AlignCenter)
H2_layout.addWidget(rb2,alignment=Qt.AlignCenter)
H1_layout.addWidget(rb3,alignment=Qt.AlignCenter)
H1_layout.addWidget(rb4,alignment=Qt.AlignCenter)

main_Layout.addWidget(question,alignment=Qt.AlignCenter)
main_Layout.addLayout(H2_layout)
main_Layout.addLayout(H1_layout)


def victory_win():
    victory_win = QMessageBox()
    victory_win.setText('Правильно!')
    victory_win.exec_()
def show_lose():
    victory_win = QMessageBox()
    victory_win.setText('Ні,в 2015 році')
    victory_win.exec_()


rb1.clicked.connect(victory_win)
rb2.clicked.connect(show_lose)
rb3.clicked.connect(show_lose)
rb4.clicked.connect(show_lose)

mw.setLayout(main_Layout)

rb_group.buttonClicked.connect(result)

buttons = rb_group.button
